<div class="lifted-box bg-white shadow p-4 mb-4 d-flex @Classes justify-content-center">
    @ChildContent
</div>

<style>
    .lifted-box {
        min-height: 200px; 
        min-width: 500px; 
        max-width: fit-content; 
        height: auto;
        border-radius: 0.5rem; 
    }
</style>


@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public String Classes { get; set; } = "flex-column";
}
